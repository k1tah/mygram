<resources>
    <!-- Base application theme. -->
    <style name="Theme.Mygram" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_src</item>
        <item name="colorPrimaryVariant">@color/day_src</item>
        <item name="colorOnPrimary">@color/white_lite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_lite</item>
        <item name="colorOnSecondary">@color/white_lite</item>
        <!-- Status bar. -->
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/text_style</item>
    </style>
</resources>
